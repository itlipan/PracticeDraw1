<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <declare-styleable name="ExpandTextView">
        <attr name="shrinkShowMaxLine" format="integer"/>
        <attr name="needShowShrinkSpan" format="boolean"/>
        <attr name="needShowExpandSpan" format="boolean"/>
        <attr name="shrinkSpanHintInfo" format="string"/>
        <attr name="expandSpanHintInfo" format="string"/>
        <attr name="gapBeforeSpan" format="string"/>
        <attr name="ellipsisBeforeSpan" format="string"/>
    </declare-styleable>
</resources>
