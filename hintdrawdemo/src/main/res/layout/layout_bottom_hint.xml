<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimaryDark"
                android:orientation="vertical">


    <ImageView
        android:id="@+id/iv_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:src="@drawable/scan_goup_line"
        />

    <TextView
        android:id="@+id/tv_hint_info_below"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_line"
        android:layout_marginRight="16dp"
        android:layout_toLeftOf="@id/iv_line"
        android:text="支持行驶证拍照识别VIN码,车辆信息等"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/tv_hint_info_below"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="16dp"
        android:layout_toLeftOf="@id/iv_line"
        android:text="新功能上线了"/>

    <TextView
        android:id="@+id/tv_has_known"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_line"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:layout_toLeftOf="@id/iv_line"
        android:padding="16dp"
        android:text="我知道了"/>

</RelativeLayout>